<% include ./partials/header%>
<div class= ui huge header>Job App</div>
<table class="ui padded compact table">
  <thead>
    <tr>
      <th>Company</th>
      <th>Job</th>
      <th>Date Applied</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% jobs.forEach(function(job) {%>
    <tr>
      <td><%=job.company%></td>
      <td><%=job.job%></td>
      <td><%=job.dateApplied.toDateString()%></td>
      <td>
        <% if(job.description && job.description.length > 0) { %>
            <%= job.description.substring(0, 100)%>
        <% } %> 
        <div class="extra">
        <a class="ui floated basic violet button" href="/jobs/<%= job._id%>"> Readmore<i class= "right chevron icon"></i> </a>
      </td>
    </tr> 
    <% })%>
  </tbody>
</table>
<% include ./partials/footer%>


